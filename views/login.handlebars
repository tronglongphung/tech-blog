<div class="container">
    <div class="flex justify-center">
        <div class="w-full md:w-1/3 mt-20 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col">
        <h2 class="text-center font-semibold text-3xl	">Login Form</h2>
        <form class="login">
            <div class="form-group">
            <label for="exampleInputEmail1" class="ml-5 block text-grey-darker text-sm font-bold mb-2">Email address</label>
            <input type="email" class="form-control shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" name="email" id="email" placeholder="Email" required>
            </div>
            <div class="form-group mt-4">
            <label for="exampleInputPassword1" class="ml-5 block text-grey-darker text-sm font-bold mb-2">Password</label>
            <input type="password" class="form-control shadow appearance-none border border-red rounded w-full py-2 px-3 text-grey-darker mb-3" name="password" id="password" placeholder="Password" required>
            </div>
            <div  class="flex items-center justify-between">
            <button type="submit" class="bg-blue-500 px-5 py-3 text-sm shadow-sm font-medium tracking-wider border text-blue-100 rounded-full hover:shadow-lg hover:bg-blue-600">Login</button>
            </div>
        </form>
        <br />
        <p class="text-center font-semibold">Or <a class="signupLink" href="/signup">sign up here</a></p>
        </div>
    </div>
</div>
<script type="text/javascript" src="/js/login.js"></script>
