<div class="container">
    <div class="flex justify-center">
        <div class="w-full md:w-1/3 mt-20 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col">
            <h2 class="text-center font-semibold text-3xl">Sign Up Form</h2>
            <form class="signup">
                <div class="form-group">
                    <label for="exampleInputEmail1" class="ml-5 block text-grey-darker text-sm font-bold mb-2">Name</label>
                    <input type="text" id="name" class="form-control shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" name="name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1" class="ml-5 block text-grey-darker text-sm font-bold mb-2">Email address</label>
                    <input type="email" id="email" class="form-control shadow appearance-none border border-red rounded w-full py-2 px-3 text-grey-darker mb-3" name="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1" class="ml-5 block text-grey-darker text-sm font-bold mb-2">Password</label>
                    <input type="password" id="password" class="form-control shadow appearance-none border border-red rounded w-full py-2 px-3 text-grey-darker mb-7" name="password" placeholder="Password" required>
                </div>
                <button type="submit" class="btn btn-dark bg-blue-500 px-5 py-3 text-sm shadow-sm font-medium tracking-wider border text-blue-100 rounded-full hover:shadow-lg hover:bg-blue-600">Sign Up</button>
            </form>
            <br />
            <p class="text-center font-semibold">Or <a class="signupLink" href="/login">log in here</a></p>
        </div>
    </div>
</div>
<script type="text/javascript" src="/js/signup.js"></script>